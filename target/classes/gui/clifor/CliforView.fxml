<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="471.0" prefWidth="617.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.clifor.CliforViewController">
   <children>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" VBox.vgrow="NEVER">
        <items>
          <Button fx:id="btnNew" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onBtnNewAction" text="Novo registro">
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="273.0">
               <children>
                  <RadioButton fx:id="rdioClientes" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#rdioButtonFiltroClick" text="Clientes">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="rdioGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="rdioFornecedores" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" onAction="#rdioButtonFiltroClick" text="Fornecedores" toggleGroup="$rdioGroup">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <Label fx:id="lblFiltro" text="Filtrar por:">
                     <padding>
                        <Insets left="5.0" right="10.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <opaqueInsets>
                  <Insets left="20.0" right="20.0" />
               </opaqueInsets>
            </HBox>
            <TextField fx:id="filtroNome" alignment="CENTER_RIGHT" onInputMethodTextChanged="#txtNomeFiltroChange" prefHeight="25.0" prefWidth="227.0" promptText="Digite o nome para pesquisa">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets left="3.0" right="3.0" />
               </padding>
            </TextField>
        </items>
      </ToolBar>
      <TableView fx:id="tblView" nodeOrientation="LEFT_TO_RIGHT" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="tblColumnId" editable="false" maxWidth="60.0" minWidth="60.0" prefWidth="60.0" resizable="false" style="-fx-alignment: center; -fx-border-fill: transparent;" text="ID" />
          <TableColumn fx:id="tblColumnProvider" editable="false" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" resizable="false" style="-fx-alignment: center-left;" text="Tipo" />
            <TableColumn fx:id="tblColumnName" editable="false" maxWidth="1.7976931348623157E308" minWidth="-Infinity" prefWidth="-1.0" style="-fx-alignment: center-left;" text="Nome" />
            <TableColumn fx:id="tblColumnEDIT" editable="false" maxWidth="35.0" minWidth="35.0" prefWidth="35.0" resizable="false" sortable="false" style="-fx-alignment: center;" />
            <TableColumn fx:id="tblColumnDELETE" editable="false" maxWidth="40.0" minWidth="40.0" prefWidth="40.0" resizable="false" sortable="false" style="-fx-alignment: center;" />
        </columns>
         <VBox.margin>
            <Insets bottom="1.0" top="1.0" />
         </VBox.margin>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
